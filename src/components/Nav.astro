---
//library imports
import { Icon} from 'astro-icon';

//data imports
import navData from "../data/navData.js"

//component imports
import Link from './Link.astro';
---

<nav aria-label="Primary">
    <div class="navbar">
        <a href="/" aria-label="Go Home" class="logomark">
            <Icon name="logomark" width="60" />
        </a>
        <ul>
            {
                //this will loop trough the navData.js file to make the menu items
                navData.map((item) => 
                <Link 
                    text={item.name} 
                    href={item.path} 
                    style="secondary" 
                    isFilled={false}
                    borderVisible={false}
                    data-navLink

                />)
            }

        </ul>
    </div>
</nav>

<script>
    import "../js/nav.js"
</script>

