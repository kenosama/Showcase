---
// library imports
import { Icon } from "astro-icon";

// component imports
import Link from "./Link.astro";

// data imports
import navData from "../data/navData";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" class="logomark" aria-label="Go home">
      <Icon name="logomark" width="60" />
    </a>
    <a>
      {
        navData.map((item) => (
          <a 
            href={item.path}
            class="link primary"
            data-navLink> {item.name} </a>
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../js/nav.js";
</script>