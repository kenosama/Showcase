---
//components imports
import Link from "./Link.astro"
const {prevUrl, nextUrl} = Astro.props;
---
<nav aria-label="Blog pages">
    {
        //if prevUrl exist
        prevUrl &&(
            <Link 
                href={prevUrl}
                text="Previous"
                style="primary"
                borderVisible={true}
                isFilled={false}
                icon={{
                    name: "tabler:arrow-big-left-line",
                    side: "left",
                }} 
            />
        )
    }
    {
        //if nextUrl exist
        nextUrl &&(
            <Link 
                href={nextUrl}
                text="Next"
                style="primary"
                borderVisible={true}
                isFilled={false}
                icon={{
                    name: "tabler:arrow-big-right-line",
                    side: "right",
                }} 
            />
        )
    }
</nav>
