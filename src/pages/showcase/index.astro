---
// component imports
import PostCard from "../../components/PostCard.astro";
import MainLayout from "../../layouts/MainLayout.astro";

//utilities imports
import {formatShowcasePost} from '../../js/utils'

const allPosts = await Astro.glob("./*.md");

const formattedPost = formatShowcasePost(allPosts,
//  { 
//     filterOutDrafts: true,
//     filterOutFuturePost: true,
//     sortByDate: true,
//     limit: 50
//     }
    );
---

<MainLayout title="Thomas Cano Morant's Showcase">
  <section class="container" aria-label="Showcase Post">
    <h1 class="h1">Latest Showcase Posts</h1>
    <div class="post-container">
      {
        formattedPost.map((post) => (
          <PostCard
            frontmatter={post.frontmatter}
            url={post.url}
            TagType="h2"
          />
        ))
      }
    </div>
  </section>
</MainLayout>
